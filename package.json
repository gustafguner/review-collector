{
  "name": "slack-bot",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src",
    "build": "tsc",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "lint": "tslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@slack/events-api": "^2.2.0",
    "@slack/web-api": "^5.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "node-fetch": "^2.3.0",
    "request": "^2.88.0",
    "slackbots": "^1.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/node-fetch": "^2.3.2",
    "@types/request": "^2.48.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.3"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
